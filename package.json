{
  "name": "parking-codes",
  "version": "1.0.0",
  "description": "Parking codes demo app for apartment management",
  "main": "server/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "echo 'No build needed - Railway will handle it'",
    "start": "cd server && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}